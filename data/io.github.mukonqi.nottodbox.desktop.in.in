[Desktop Entry]
Name=Nottodbox
Comment=Edit notes, todo lists and diaries

Type=Application
Exec=@BINDIR@/nottodbox
Terminal=false
Icon=io.github.mukonqi.nottodbox
StartupWMClass=nottodbox

Categories=Utility;TextEditor;Qt;
Actions=Home;Notes;Todos;Diaries;Settings;

[Desktop Action Home]
Exec=nottodbox --home
Name=Home

[Desktop Action Notes]
Exec=nottodbox --notes
Name=Notes

[Desktop Action Todos]
Exec=nottodbox --todos
Name=Todos

[Desktop Action Diaries]
Exec=nottodbox --diaries
Name=Diaries