<component type="desktop-application">
    <id>io.github.mukonqi.nottodbox</id>
  
    <name>Nottodbox</name>
    <summary>Organize notes, to-dos and diaries</summary>
    <icon type="stock">nottodbox</icon>
  
    <description>
        <p>
            Organize your notes, to-dos and diaries with highly customizable WYSIWYG-like editor.
        </p>
    </description>

    <categories>
        <category>Office</category>
        <category>Utility</category>
    </categories>

    <keywords>
        <keyword translate="no">nottodbox</keyword>
        <keyword>editor</keyword>
        <keyword>wysiwyg</keyword>
        <keyword>note</keyword>
        <keyword>to-do</keyword>
        <keyword>diary</keyword>
    </keywords>

    <url>
        <homepage>https://github.com/mukonqi/nottodbox</homepage>
        <bugtracker>https://github.com/mukonqi/nottodbox/issues</bugtracker>
    </url>
  
    <launchable type="desktop-id">io.github.mukonqi.nottodbox.desktop</launchable>

