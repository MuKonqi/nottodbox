<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>io.github.mukonqi.nottodbox</id>
  
    <name>Nottodbox</name>
    <summary>Organize notes, to-dos and diaries</summary>
    <icon type="stock">io.github.mukonqi.nottodbox</icon>
  
    <description>
        <p>Organize your notes, to-dos and diaries with highly customizable WYSIWYG-like editor.</p>
    </description>

    <categories>
        <category>Office</category>
        <category>Utility</category>
    </categories>

    <keywords>
        <keyword translate="no">nottodbox</keyword>
        <keyword>editor</keyword>
        <keyword>wysiwyg</keyword>
        <keyword>note</keyword>
        <keyword>to-do</keyword>
        <keyword>diary</keyword>
    </keywords>

    <url type="homepage">https://github.com/mukonqi/nottodbox</url>
    <url type="bugtracker">https://github.com/mukonqi/nottodbox/issues</url>
  
    <launchable type="desktop-id">io.github.mukonqi.nottodbox.desktop</launchable>

    <releases>
        <release version="v0.0.9" date="2025-03-28">
            <description>
                <ul>Rework of main window's tab bar</ul>
                <ul>Move about page to settings page</ul>
                <ul>Add option for adding/deleting start menu shortcut in settings page</ul>
                <ul>Add start menu shortcut at every startup and make it disablenable in setting page</ul>
                <ul>Fix .desktop file for Meson installations</ul>
                <ul>Other various improvements and fixes</ul>
            </description>
        </release>
        <release version="v0.0.8-4" date="2025-03-25">
            <description>
                <ul>Some minor improvements in settings page</ul>
                <ul>Remove unused libraries from README.md and meson.build</ul>
            </description>
        </release>
        <release version="v0.0.8-3" date="2025-03-22">
            <description>
                <ul>Update icon</ul>
                <ul>Fix icon in about page for AppImage package</ul>
            </description>
        </release>
        <release version="v0.0.8-2" date="2025-03-22">
            <description>
                <ul>Fix AppImage package for Debian/Ubuntu based distributions</ul>
                <ul>Some other improvements/fixes</ul>
            </description>
        </release>
        <release version="v0.0.8" date="2025-03-15">
        </release>
    </releases>

