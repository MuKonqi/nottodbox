[Desktop Entry]
Name=Nottodbox
Comment=Organize notes, to-dos and diaries

Type=Application
Exec=@BINDIR@/nottodbox
Terminal=false
Icon=io.github.mukonqi.nottodbox
StartupWMClass=nottodbox

Categories=Utility;TextEditor;Qt;
Actions=Home;Notes;Todos;Diaries;Settings;

[Desktop Action Home]
Exec=@BINDIR@/nottodbox -i 1
Name=Home

[Desktop Action Notes]
Exec=@BINDIR@/nottodbox -i 2
Name=Notes

[Desktop Action Todos]
Exec=@BINDIR@/nottodbox -i 3
Name=To-Dos

[Desktop Action Diaries]
Exec=@BINDIR@/nottodbox -i 4
Name=Diaries

[Desktop Action Settings]
Exec=@BINDIR@/nottodbox -i 5
Name=Settings